<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Titulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuracion"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F1C40F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Habitacion 1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginHorizontal="10dp"
                            android:text="Encender / Apagar"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccione intensidad"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Alta" />
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Media"/>
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Baja" />
                        </RadioGroup>

                        <CheckBox
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="Modo Ahorro"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseampolleta"/>

                <!--habitacion 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F1C40F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="habitacion"
                            android:gravity="center"
                            android:text="Habitacion hijos"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginHorizontal="10dp"
                            android:text="Encender / Apagar"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccione intensidad"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Alta" />
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Media"/>
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Baja" />
                        </RadioGroup>

                        <CheckBox
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="Modo Ahorro"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseampolleta"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F1C40F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Habitacion 2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginHorizontal="10dp"
                            android:text="Encender / Apagar"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccione intensidad"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Alta" />
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Media"/>
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Baja" />
                        </RadioGroup>

                        <CheckBox
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="Modo Ahorro"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseampolleta"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F1C40F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Habitacion 3"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginHorizontal="10dp"
                            android:text="Encender / Apagar"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccione intensidad"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:contentDescription="habitacion"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Alta" />
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Media"/>
                            <RadioButton
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"
                                android:text="Baja" />
                        </RadioGroup>

                        <CheckBox
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="Modo Ahorro"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseampolleta"/>

                <Button
                    android:onClick="onClickVolverConfiguracion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="VOLVER"
                    android:textColor="@color/black"
                    android:backgroundTint="#FF3333"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

